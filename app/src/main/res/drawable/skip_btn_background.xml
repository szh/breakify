<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="14dp" />
            <stroke android:width="2dp" android:color="@color/timer_border_pressed" />
            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />
            <solid android:color="@color/timer_background_pressed" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="14dp" />
            <stroke android:width="2dp" android:color="@color/timer_border" />
            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />
            <solid android:color="@color/timer_background" />
        </shape>
    </item>
</selector>
