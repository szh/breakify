<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:padding="@dimen/durations_display_layout_padding"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/settings_display_background">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_marginEnd="@dimen/durations_display_layout_padding"
        android:layout_marginRight="@dimen/durations_display_layout_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/durations_display_margin"
            android:layout_marginRight="@dimen/durations_display_margin"
            android:text="@string/pref_work_duration"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="0" />

        <TextView
            android:id="@+id/work_duration_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/durations_display_margin"
            android:layout_marginRight="@dimen/durations_display_margin"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pref_break_duration"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="0" />

        <TextView
            android:id="@+id/break_duration_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="1" />

    </GridLayout>

    <ImageButton
        android:id="@+id/edit_btn"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
